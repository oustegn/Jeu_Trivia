<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ScoreBoard">

        <TextView
                android:id="@+id/Score"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:text="@string/rejouer"
                android:layout_width="77dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/Score"
                android:onClick="rejouer" android:background="@android:color/holo_green_dark"/>
        <TextView
                android:text="Meilleurs Scores"
                android:layout_width="wrap_content"
                android:textSize="26sp"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="84dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="155dp"/>
        <ListView
                android:layout_width="342dp"
                android:layout_height="141dp"
                android:textSize="20sp"
                android:id="@+id/listScore" android:layout_centerHorizontal="true" android:layout_below="@+id/textView2"
                android:layout_marginTop="-155dp"/>

</RelativeLayout>