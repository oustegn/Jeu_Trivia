<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Authentification">

    <TextView
            android:text="Authentification"
            android:layout_width="217dp"
            android:textSize="26sp"
            android:layout_height="40dp" tools:layout_editor_absoluteY="5dp"
            tools:layout_editor_absoluteX="65dp" android:id="@+id/textView"
            android:layout_alignParentTop="true" android:layout_marginTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentEnd="true" android:layout_marginEnd="69dp"/>
    <EditText
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtPseudo"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:hint="Pseudo"
    />
    <EditText
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edtPassword"
            android:layout_alignParentTop="true"
            android:layout_marginTop="185dp" android:layout_centerHorizontal="true"
            android:hint="Password"
    />
    <Button
            android:text="Se connecter"
            android:layout_width="323dp"
            android:layout_height="39dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="207dp"
            android:id="@+id/btnAuthentification"
            android:onClick="authentification"
            android:background="@android:color/holo_blue_dark"
            android:layout_centerHorizontal="true"/>
    <Button
            android:layout_width="321dp"
            android:layout_height="40dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="99dp" android:id="@+id/btnCreer"
            android:text="CrÃ©er un compte"
            android:onClick="commencerCreationCompte" android:background="@android:color/holo_green_dark"
            android:layout_alignEnd="@+id/edtPassword" android:layout_marginEnd="-1dp"/>
    <TextView
            android:text="ou"
            android:layout_width="44dp"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="163dp" android:id="@+id/textView4"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>